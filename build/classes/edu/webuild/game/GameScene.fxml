<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.webuild.game.GameSceneController">
    <BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
        <center>
            <StackPane BorderPane.alignment="CENTER">
                <Canvas fx:id="canvas" height="350.0" width="600.0" />
                <Label fx:id="scoreLabel" alignment="TOP_RIGHT" contentDisplay="CENTER" layoutX="265.0" layoutY="14.0" prefHeight="30.0" prefWidth="70.0" text="Score: 0" textFill="#000000" AnchorPane.topAnchor="10.0" AnchorPane.rightAnchor="10.0" />
                <HBox BorderPane.alignment="TOP_CENTER" spacing="20.0">
                    <Button fx:id="startButton" mnemonicParsing="false" onAction="#startGame" prefHeight="30.0" prefWidth="70.0" text="Start" />
                    <Button fx:id="pauseButton" mnemonicParsing="false" onAction="#pauseGame" prefHeight="30.0" prefWidth="70.0" text="Pause" />
                    <Button fx:id="restartButton" mnemonicParsing="false" onAction="#restartGame" prefHeight="30.0" prefWidth="70.0" text="Restart" />
                </HBox>
            </StackPane>
        </center>
        <bottom>
            <HBox BorderPane.alignment="BOTTOM_CENTER" spacing="20.0">
                <Button fx:id="playAgainButton" mnemonicParsing="false" onAction="#restartGame" prefHeight="30.0" prefWidth="70.0" text="Play Again" />
            </HBox>
        </bottom>
    </BorderPane>
</AnchorPane>
